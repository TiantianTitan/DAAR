datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id         Int      @id @default(autoincrement())
  productType String   // 商品种类：'卡片' 或 '卡包'
  productId   String   // 卡片或卡包的ID
  name        String   // 卡片名称
  price       Float    // 卡片价格
  stock       Int      // 库存
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
